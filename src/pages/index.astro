---
import Layout from "../layouts/Layout.astro";
---

<Layout title="AppWow — Instant App Hub">
  <main style="
    max-width: 960px;
    margin: 0 auto;
    padding: 2rem 1.25rem;
  ">

    <header style="margin-bottom: 2rem;">
      <h1>AppWow</h1>
      <p style="color:#555; max-width:720px;">
        AppWow is the hub for Instant Apps — fast, focused, and purpose-built
        experiences for specific use cases.
      </p>
    </header>

    <section style="
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2.5rem;
    ">

      <!-- LinxLocal -->
      <a href="/linxlocal" style="text-decoration:none; color:inherit;">
        <div style="border:1px solid #e5e5e5; border-radius:8px; overflow:hidden;">
          <img src="/images/cafe-hero.jpg" alt="LinxLocal" style="width:100%; height:160px; object-fit:cover;">
          <div style="padding:1rem;">
            <h3 style="margin:0 0 0.25rem 0;">LinxLocal</h3>
            <p style="margin:0; color:#555;">
              Instant Apps for local businesses, cafés, and services.
            </p>
          </div>
        </div>
      </a>

      <!-- CarLinx -->
      <a href="/carlinx" style="text-decoration:none; color:inherit;">
        <div style="border:1px solid #e5e5e5; border-radius:8px; overflow:hidden;">
          <img src="/images/car-hero.jpg" alt="CarLinx" style="width:100%; height:160px; object-fit:cover;">
          <div style="padding:1rem;">
            <h3 style="margin:0 0 0.25rem 0;">CarLinx</h3>
            <p style="margin:0; color:#555;">
              Vehicle listings with direct buyer–seller interaction.
            </p>
          </div>
        </div>
      </a>

      <!-- HomeLinx -->
      <a href="/homelinx" style="text-decoration:none; color:inherit;">
        <div style="border:1px solid #e5e5e5; border-radius:8px; overflow:hidden;">
          <img src="/images/home-hero.jpg" alt="HomeLinx" style="width:100%; height:160px; object-fit:cover;">
          <div style="padding:1rem;">
            <h3 style="margin:0 0 0.25rem 0;">HomeLinx</h3>
            <p style="margin:0; color:#555;">
              Property listings without portals, fees, or friction.
            </p>
          </div>
        </div>
      </a>

      <!-- Submit -->
      <a href="/submit" style="text-decoration:none; color:inherit;">
        <div style="border:1px dashed #ccc; border-radius:8px; overflow:hidden;">
          <img src="/images/cafe-hero.jpg" alt="Submit an Instant App" style="width:100%; height:160px; object-fit:cover;">
          <div style="padding:1rem;">
            <h3 style="margin:0 0 0.25rem 0;">Submit an Instant App</h3>
            <p style="margin:0; color:#555;">
              Start your own Instant App in minutes.
            </p>
          </div>
        </div>
      </a>

    </section>

    <footer>
      <p style="color:#666; font-size:0.9rem;">
        VIAFRAME v0.1 · Static · Data-driven · No backend
      </p>
    </footer>

  </main>
</Layout>
